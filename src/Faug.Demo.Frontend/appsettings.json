{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Authentication": {
    "Authority": "http://localhost:8443/realms/master/",
    "CookieName": "__BFF",
    "ClientId": "frontend",
    "ResponseType": "code",
    "ResponseMode": "query",
    "GetClaimsFromUserInfoEndpoint": true,
    "MapInboundClaims": false,
    "SaveTokens": true,
    "Scope": "openid profile offline_access",
    "CookieDurationInMinutes": 15,
    "SlidingExpirationPeriodInMinutes": 3,
    "KeyVaultUrl": "",
    "ClientSecretName": ""
  },
  "ReverseProxyRulesForBackend": {
    "Clusters": {
      "locationsApi": {
        "Destinations": {
          "locationsApi/destination1": {
            "Address": "https://location-api"
          }
        }
      },
      "weatherApi": {
        "Destinations": {
          "weatherApi/destination1": {
            "Address": "https://weather-api"
          }
        }
      }
    },
    "Routes": {
      "route1": {
        "ClusterId": "locationsApi",
        "AuthorizationPolicy": "RequireAuthenticatedUserPolicy",
        "Match": {
          "Path": "/api/locations/{**catch-all}"
        },
        "AllowAnonymous": false
      },
      "route2": {
        "ClusterId": "weatherApi",
        "AuthorizationPolicy": "RequireAuthenticatedUserPolicy",
        "Match": {
          "Path": "/api/weather/{**catch-all}"
        },
        "AllowAnonymous": false
      }
    }
  }
}